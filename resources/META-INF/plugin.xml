<idea-plugin>
	<id>org.mustbe.consulo.java.web</id>
	<name>Java Web API</name>
	<depends>com.intellij.xml</depends>
	<depends>org.consulo.java</depends>
	<resource-bundle>messages.JavaWebBundle</resource-bundle>

	<extensions defaultExtensionNs="com.intellij.xml">
		<standardResource url="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" path="/standardSchemas/web-app_2_5.xsd" version="2.5" />
		<standardResource url="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" path="/standardSchemas/web-app_3_0.xsd" version="3.0" />
		<standardResource url="http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd" path="/standardSchemas/web-app_3_1.xsd" version="3.1" />
	</extensions>

	<extensions defaultExtensionNs="com.intellij.xml.dom">
		<fileDescription implementation="org.mustbe.consulo.java.web.dom.web.WebAppDescriptor" />
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<highlightVisitor implementation="org.mustbe.consulo.java.web.jsp.ide.highlight.JspHighlightVisitor" />

		<packaging.artifactType implementation="org.mustbe.consulo.java.web.artifact.ExplodedWarArtifactType" />
		<packaging.artifactType implementation="org.mustbe.consulo.java.web.artifact.WarArtifactType" />
		<packaging.elementType implementation="org.mustbe.consulo.java.web.artifact.WebResourceModuleOutputElementType" />

		<fileTypeFactory implementation="org.mustbe.consulo.java.web.jsp.JspFileTypeFactory" />
		<fileTypeFactory implementation="org.mustbe.consulo.java.web.artifact.WarFileTypeFactory" />

		<lang.fileViewProviderFactory language="JSP" implementationClass="org.mustbe.consulo.java.web.jsp.JspFileViewProviderFactory" />
		<lang.parserDefinition language="JSP" implementationClass="org.mustbe.consulo.java.web.jsp.JspParserDefinition" />

		<lang.syntaxHighlighterFactory key="JSP" implementationClass="org.mustbe.consulo.java.web.jsp.highlight.JspSyntaxHighlighterFactory"/>
		<syntaxHighlighter key="JSP" implementationClass="org.mustbe.consulo.java.web.jsp.highlight.JspSyntaxHighlighter"/>
		<contentFolderSupportPatcher implementation="org.mustbe.consulo.java.web.module.JavaWebContentFolderSupportPatcher" />

		<moduleExtensionProvider key="java-web"
								 parentKey="java"
								 icon="/general/web.png"
								 name="Web"
								 immutableClass="org.mustbe.consulo.java.web.module.extension.JavaWebModuleExtension"
								 mutableClass="org.mustbe.consulo.java.web.module.extension.JavaWebMutableModuleExtension"/>
	</extensions>
</idea-plugin>